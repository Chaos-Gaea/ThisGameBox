<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShenTuGameBox" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <!--appbar背景颜色-->
        <item name="colorPrimary">@color/white</item>
        <!---->
        <item name="colorPrimaryVariant">@color/transparent_background</item>
        <item name="colorOnPrimary">#00BCD4</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--状态栏颜色 -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:actionBarTabTextStyle">@style/ActionBarStyle</item>

    </style>

    <style name="mystyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">#FFFFFF</item>
<!--        <item name="windowNoTitle">false</item>-->
<!--        <item name="windowActionBar">true</item>-->
<!--        <item name="actionBarStyle">@style/ActionBarStyle</item>-->
<!--        <item name="actionBarSize">56dip</item>-->
        <item name="android:windowTitleSize">50dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:windowTitleBackgroundStyle">@null</item>
    </style>

    <style name="ActionBarStyle" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="background">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="FullScreenTheme" parent="android:Theme">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>