<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/firstpg_min"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    <TextView-->
<!--        android:id="@+id/textView"-->
<!--        android:layout_width="63dp"-->
<!--        android:layout_height="16dp"-->
<!--        android:layout_marginStart="13dp"-->

<!--        android:text="热门版本"-->

<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent" />-->

    <TextView
        android:padding="0dp"
        android:id="@+id/firstpg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"

        android:layout_marginBottom="38dp"
        android:textColor="@color/grey_dark"
        android:textSize="15sp"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="@id/firstpg_min"
        app:layout_constraintStart_toEndOf="@id/firstpg_min"
        app:layout_constraintTop_toTopOf="@id/firstpg_min" />

    <TextView
        android:id="@+id/firstpg_intro"
        android:layout_width="200dp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/grey"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/firstpg_min"
        app:layout_constraintStart_toStartOf="@id/firstpg_title"
        app:layout_constraintTop_toTopOf="@id/firstpg_min" />

    <TextView
        android:lines="1"
        android:ellipsize="end"
        android:id="@+id/firstpg_open"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="2dp"
        android:textColor="@color/open_text"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/firstpg_min"
        app:layout_constraintStart_toStartOf="@id/firstpg_intro"
        app:layout_constraintTop_toTopOf="@id/firstpg_min" />

    <Button
        android:id="@+id/firstpg_detial_btn"
        android:layout_width="64dp"
        android:layout_height="27dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="14dp"
        android:insetTop="0dp"
        android:textColor="@color/grey_dark"
        android:background="@drawable/btn_shape"
        android:insetBottom="0dp"
        android:textSize="12sp"
        app:backgroundTint="@color/btnBg"
        app:layout_constraintBottom_toBottomOf="@id/firstpg_min"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/firstpg_min" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/welfare"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/firstpg_title"
        app:layout_constraintStart_toEndOf="@id/firstpg_title"
        app:layout_constraintTop_toTopOf="@id/firstpg_title"
        app:srcCompat="@mipmap/welfare" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/reback"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@id/welfare"
        app:layout_constraintStart_toEndOf="@id/welfare"
        app:layout_constraintTop_toTopOf="@id/welfare"
        app:srcCompat="@mipmap/reback" />

    <ImageView
        android:background="@color/grey_dark"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/rec_big_cover"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstpg_min"/>


</androidx.constraintlayout.widget.ConstraintLayout>