<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/head_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="12dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/head_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15.5dp"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/grey"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/head_img"
        app:layout_constraintTop_toTopOf="@id/head_img" />

    <TextView
        android:id="@+id/head_intro"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/grey"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/head_img"
        app:layout_constraintStart_toStartOf="@id/head_title"
        app:layout_constraintTop_toBottomOf="@id/head_title" />

    <Button
        android:id="@+id/head_btn"
        android:layout_width="64dp"
        android:layout_height="27dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="14dp"
        android:insetTop="0dp"
        android:textColor="@color/black"
        android:background="@drawable/btn_shape"
        android:insetBottom="0dp"
        android:textSize="12sp"
        app:backgroundTint="@color/btnBg"
        app:layout_constraintBottom_toBottomOf="@id/head_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/head_img" />



</androidx.constraintlayout.widget.ConstraintLayout>