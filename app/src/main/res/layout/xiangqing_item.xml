<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginBottom="12dp"
        android:layout_marginTop="20dp"
        android:id="@+id/xq_game_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:contentDescription="game page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBottom="12dp" />

    <!--    <TextView-->
    <!--        android:id="@+id/textView"-->
    <!--        android:layout_width="63dp"-->
    <!--        android:layout_height="16dp"-->
    <!--        android:layout_marginStart="13dp"-->

    <!--        android:text="热门版本"-->

    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->

    <TextView
        android:id="@+id/xq_game_title"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="51dp"
        android:lines="1"
        android:text=""
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/xq_game_img"
        app:layout_constraintStart_toEndOf="@id/xq_game_img"
        app:layout_constraintTop_toTopOf="@id/xq_game_img" />

    <TextView
        android:id="@+id/xq_game_rec"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:lines="2"
        android:layout_marginBottom="14dp"
        android:ellipsize="end"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/xq_game_img"
        app:layout_constraintStart_toStartOf="@id/xq_game_title"
        app:layout_constraintTop_toTopOf="@+id/xq_game_img" />

<LinearLayout
    android:gravity="center"
    android:stateListAnimator="@null"
    app:backgroundTint="@null"
    app:layout_constraintBottom_toBottomOf="@+id/xq_game_img"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/xq_game_img"
    android:orientation="vertical"
    android:layout_marginEnd="12dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
       android:visibility="gone"
        android:id="@+id/gift_btn"
        android:layout_width="64dp"
        android:layout_height="27dp"
        android:background="@drawable/gift_btn"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="@string/activity_gift"
        android:textColor="@color/gift_stroke"
        android:textSize="10sp"
        app:backgroundTint="@null"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/reback_btn"
        android:layout_width="64dp"
        android:layout_height="27dp"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="6dp"

        android:background="@drawable/cash"
        android:gravity="center"
        android:text="充值返现30%"
        android:textColor="@color/cash_stroke"
        android:textSize="10sp"
        app:backgroundTint="@null"/>

</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>