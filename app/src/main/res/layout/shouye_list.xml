<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:layout_marginStart="13dp"
        android:id="@+id/firstpg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/xq_recycleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstpg_txt" />

    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:id="@+id/more_item"
        android:text="@string/get_more"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/grey_lint"
        android:layout_below="@id/xq_recycleview"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
</RelativeLayout>